doctype
html(itemscope,itemtype="http://schema.org/Article" lang="zh-TW")
    //page default Information
    block pageInfo
        - var pageTitle = "首頁"
        - var pageDesc = "敘述"
    //html head
    include _head.jade
    //html body
    body
        div.l-wrap#app
            //- {{$data}}
            //- button(v-on:click="openPop=!openPop,pupTicket=!pupTicket") click
            //- button(v-on:click="openPop=!openPop,pupOops=!pupOops") click
            include _nav.jade
            // render nav view
            div.l-main
                block page_main
                //render main view
            div.loading(v-show="loading" v-cloak)
                div.spinner
                    div.rect1
                    div.rect2
                    div.rect3
                    div.rect4
                    div.rect5
            div.popup.popup--oops(v-show="pupOops" v-cloak)
                div.container
                    div.popup__btn__close(v-on:click="pupOops=!pupOops")
                        div.one
                        div.two
                    div.popup__box
                        div.__popup__txtarea
                            h2.popup__h2 Oops!資料有誤!
                            p.popup__txt 親愛的用戶你的“手機號碼”格式填寫錯誤，請再次確認填寫資料。
                            div.btn__area
                                a(href="javascript:").btn.popup__btn 確定
                                    i.btn__icon
            div.popup.popup--ticket(v-show="pupTicket" v-cloak)
                div.container
                    div.popup__btn__close(v-on:click="openPop=!openPop,pupTicket=!pupTicket")
                        div.one
                        div.two
                    div.popup__box
                        div.popup__img
        div.l-footer.footer
            div.gotoparea
                div.gotop
            div.l-container
        script(src="../js/app.js")
