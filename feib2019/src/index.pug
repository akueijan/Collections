                        span.pink 預約理財諮詢
                        | 並完成
                        span.pink 填寫理財問卷
                        | ，即可抽
                        span.underline 十樂福袋
                        | 乙份
                        span.small (每月2名)
                    ul.dreamgifts
                        li.title
                            .awardimg
                                img(src="images/33-2-x.png")
                        li.book
                            .awardimg
                                img(src="images/37-2-x.png")
                            p.awardname 十樂筆記本
                        li.mobile
                            .awardimg
                                img(src="images/40-2-x.png")
                            p.awardname 手機拭鏡貼
                        li.gifts
                            .awardimg
                                img(src="images/36-2-x.png")
                            p.awardname 遠百商品券NT 5,000元
                        li.umbrella
                            .awardimg
                                img(src="images/38-2-x.png")
                            p.awardname 折疊雨傘
                        li.note
                            .awardimg
                                img(src="images/39-2-x.png")
                            p.awardname 十樂便條紙
                        li.pen
                            .awardimg
                                img(src="images/35-2-x.png")
                            p.awardname 原子筆
                    .eventbtn
                        a.linebtn(href="https://www.feib.com.tw/branch" title="哪裡有分行" target="_blank" gtm-data="首頁_哪裡有分行")
                            img(src="images/22-2-x.png" gtm-data="首頁_哪裡有分行")
        .notes
            .title#notetxt(@click="note=!note")
                img(src="images/invalid-name_9.png" alt="注意事項")
                //- img.mbonly(src="images/invalid-name_9-mb.png" alt="注意事項")
