doctype
html(itemscope,itemtype="http://schema.org/Article" lang="zh-TW")
    //page default Information
    - var compJs = ["comingsoon.js"]
    block pageInfo
        - var pageTitle = "立即取餐 享五星好禮｜Richart 五星汪廚快餐車"
        - var pageDesc = "成為Richart 新戶立即送LINE PONITS 100點, 完成指定任務，再抽LINE PONITS 10000點+私房料理神器! 點餐免排隊，好禮帶著走!"
        - var isVue = true
    //html head
    include _head.pug
    //html body
    body
        //- LINE Free Coins LP Tracking Code Start
        //- script.
        //-     var freecoins_lpq = [ { "app": "FREECOINS_19570", "expires": 2592000, "domain": ".friendo.com.tw" } ];
        //- script(src="https://freecoins.line-apps.com/lfc5.js" async)
        //- LINE Free Coins LP Tracking Code End
        noscript
            iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-PB59LFR" height="0" width="0" style="display:none;visibility:hidden")
        div.l-wrap#app(v-cloak=isVue)
            include _nav.pug
            //- comingsoon
            // render nav view
            div.l-fb
                div.l-container
                    div.fb-box
                        .fb-like(data-href='#', data-layout='button_count', data-action='like', data-show-faces='false', data-share='true') 
            div.l-main
                block page_main
                //render main view
            div.l-footer.footer
                div.l-container
                    p © 台新國際商業銀行 Copyright Taishin International Bank. All Rights Reserved.
                        br
                        | 建議使用 iOS 11 或 Android 8 以上版本
            .fixed-btn(v-if="!isPc")
                a(href="javascript:void(0)" title="成為新汪客" @click="outLink('scroll_oa')" gtm-data="捲軸_成為汪客")
                    img(src="images/btn-fixed.gif" alt="成為汪客" gtm-data="捲軸_成為汪客")
                .btn-gotop(@click="scrollTo('.kv')")
                    img(src="images/gotop.png")
            include _popup.pug
        
        //- components
        include component/_comingsoon.pug
        include component/_lotteryBackfill.pug

        script(type="text/javascript" src=jsFolder+"vendor.js")
        script(type="text/javascript" src=jsFolder+"lib.js")
        //- script(type="text/javascript" src="static/ScrollMagic.min.js")
        //- script(type="text/javascript" src="static/jquery.ScrollMagic.min.js")
        //- script(type="text/javascript" src="static/animation.gsap.min.js")
        if more_js
            each js in more_js
                script(type="text/javascript" src= jsFolder + js)
        script(type="text/javascript" id="appjs" src= jsFolder + "app.js?v="+timestamp data-mode=`${dev_mode}` data-site=`${apiUrl}`)
        if compJs
            each js in compJs
                script(type="text/javascript" src= jsFolder + "component/" + js)
        if pageJs
            script(src= jsFolder + pageJs+"?v="+timestamp)
        script(type='text/javascript')